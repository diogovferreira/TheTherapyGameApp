<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diogo.myapp.GameStatsActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/tvHit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etInfRunner"
            android:layout_alignStart="@+id/etInfRunner"
            android:layout_below="@+id/etInfRunner"
            android:layout_marginTop="23dp"
            android:text="Hit Wall" />

        <TextView
            android:id="@+id/etInfRunner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvStepV"
            android:layout_alignStart="@+id/tvStepV"
            android:layout_below="@+id/tvStepV"
            android:layout_marginTop="24dp"
            android:text="Infinnite Runner" />

        <TextView
            android:id="@+id/tvStepV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvStepH"
            android:layout_alignStart="@+id/tvStepH"
            android:layout_below="@+id/tvStepH"
            android:layout_marginTop="16dp"
            android:text="Step Vertical" />

        <TextView
            android:id="@+id/tvStepH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="28dp"
            android:text="Step Horizontal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLeaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="Leaning Game"
            android:layout_below="@+id/tvHit"
            android:layout_alignLeft="@+id/tvHit"
            android:layout_alignStart="@+id/tvHit" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
