        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".UserAreaActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".MyStatsActivity" />
        <activity android:name=".SessionsActivity" />
        <activity android:name=".GameStatsActivity" />
        <activity android:name=".ExercicesStatsActivity" />
        <activity
